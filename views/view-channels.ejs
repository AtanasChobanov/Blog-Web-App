<%- include("partials/header.ejs") %>

<div class="form-container">
    <h1>Списък на каналите</h1>

    <% if (channels.length > 0) { %>
        <ul class="list-group">
            <% channels.forEach(function(channel) { %>
                <li class="list-group-item">
                    <!-- Линк на h3, който да изпраща до страницата на канала -->
                    <h3><a href="/view/<%= channel.channel_id %>"><%= channel.name %></a></h3>
                    <p><%= channel.admin %></p>
                    <small>Създаден на: <%= channel.date_of_creation %></small>
                    
                    <!-- Линкове-бутони за редактиране и изтриване на канал -->
                    <div class="mt-2">
                        <a href="/<%= channel.channel_id %>/edit" class="btn btn-warning btn-sm">Редактиране</a>
                        <a href="/<%= channel.channel_id %>/delete" class="btn btn-danger btn-sm">Изтриване</a>
                    </div>
                </li>
            <% }); %>
        </ul>
    <% } else { %>
        <p>Няма налични канали.</p>
    <% } %>
</div>

<%- include("partials/footer.ejs") %>
