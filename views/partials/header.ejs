    <style>
        html, body {
            height: 100%;
            margin: 0;
            display: flex;
            flex-direction: column;
        }

        main {
            flex-grow: 1;
        }

        footer {
            flex-shrink: 0;
        }

        .header {
            background-color: #f8f9fa;
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
        }

        .header h1 {
            font-size: 2rem;
            margin-bottom: 0;
        }

        .nav-link {
            margin-right: 15px; 
        }

        .nav-link:hover {
            color: #007bff;
        }
        
        .button {
            position: relative;
            display: inline-block;
            margin: 15px;
            padding: 15px 30px;
            text-align: center;
            font-size: 18px;
            letter-spacing: 1px;
            text-decoration: none;
            color: #444cf7;
            background: transparent;
            cursor: pointer;
            transition: ease-out 0.5s;
            border: 2px solid #444cf7;
            border-radius: 10px;
            box-shadow: inset 0 0 0 0 #444cf7;
          }
          
          .button:hover {
            color: white;
            box-shadow: inset 0 -100px 0 0 #444cf7;
          }
          
          .button:active {
            transform: scale(0.9);
          }
.delete-button {
            background-color: #cc0000;
            color: white;
            border-color: #ff0000; 
            padding: 10px 20px;
            border-radius: 5px;
            cursor: pointer;
            font-size: 16px;
            transition: background-color 0.3s;
        }
        
        .delete-button:hover {
            background-color: #ff0000;
        }
        
        .delete-button:active {
            transform: scale(0.9);
        }
        .edit button {
            position: relative;
            display: inline-block;
            margin: 15px;
            padding: 10px 20px;
            text-align: center;
            font-size: 18px;
            letter-spacing: 1px;
            text-decoration: none;
            color: #444cf7;
            background: transparent;
            cursor: pointer;
            transition: ease-out 0.5s;
            border: 2px solid #444cf7;
            border-radius: 10px;
            box-shadow: inset 0 0 0 0 #444cf7;
        }
        
        .edit button:hover {
            color: white;
            box-shadow: inset 0 -100px 0 0 #444cf7;
        }
        
        .edit button:active {
            transform: scale(0.9);
        }
        /* Стил за съобщението за грешка */
        .error-message {
            background-color: #f8d7da;
            color: #721c24;
            border: 1px solid #f5c6cb;
            padding: 15px;
            border-radius: 5px;
            margin-bottom: 20px;
        } 
.search-button {
            position: relative;
            display: inline-block;
            margin: 15px;
            padding: 15px 30px;
            text-align: center;
            font-size: 16px;
            letter-spacing: 1px;
            color: #fff;
            background-color: #444cf7;
            cursor: pointer;
            transition: background-color 0.3s, ease-out 0.5s, box-shadow 0.3s;
            border: none;
            border-radius: 10px;
            box-shadow: inset 0 0 0 0 #444cf7;
        }
        
        .search-button:hover {
            color: #fff;
            box-shadow: inset 0 -100px 0 0 #444cf7;
        }
        
        .search-button:active {
            transform: scale(0.9);
        }
        .header-button {
            position: relative;
            display: inline-block;
            margin: 15px;
            padding: 15px 30px;
            text-align: center;
            font-size: 18px;
            letter-spacing: 1px;
            text-decoration: none;
            color: white;
            background: #444cf7;
            cursor: pointer;
            transition: ease-out 0.5s;
            border: 2px solid #444cf7;
            border-radius: 10px;
            box-shadow: inset 0 0 0 0 transparent;
        }
        
        .header-button:hover {
            color: #444cf7;
            background: transparent;
            box-shadow: inset 0 -100px 0 0 transparent;
        }
        
        .header-button:active {
            transform: scale(0.9);
        }

        .error-message strong {
            font-weight: bold;
        }

        /* Анимация */
        .banter-loader {
            position: fixed;
            bottom: 20px;
            right: 20px;
            width: 72px;
            height: 72px;
        }

        .banter-loader__box {
            float: left;
            position: relative;
            width: 20px;
            height: 20px;
            margin-right: 6px;
        }

        .banter-loader__box:before {
            content: "";
            position: absolute;
            left: 0;
            top: 0;
            width: 100%;
            height: 100%;
            background: #1e90ff;
            border-radius: 7px;
        }

        .banter-loader__box:nth-child(1) {
            animation: banter 0.6s 0s infinite;
        }

        .banter-loader__box:nth-child(2) {
            animation: banter 0.6s 0.1s infinite;
        }

        .banter-loader__box:nth-child(3) {
            animation: banter 0.6s 0.2s infinite;
        }

        .banter-loader__box:nth-child(4) {
            animation: banter 0.6s 0.3s infinite;
        }

        .banter-loader__box:nth-child(5) {
            animation: banter 0.6s 0.4s infinite;
        }

        .banter-loader__box:nth-child(6) {
            animation: banter 0.6s 0.5s infinite;
        }

        .banter-loader__box:nth-child(7) {
            animation: banter 0.6s 0.6s infinite;
        }

        .banter-loader__box:nth-child(8) {
            animation: banter 0.6s 0.7s infinite;
        }

        .banter-loader__box:nth-child(9) {
            animation: banter 0.6s 0.8s infinite;
        }

        @keyframes banter {
            0% {
                transform: scale(1);
            }
            100% {
                transform: scale(0.5);
            }
        }
        
    </style>
