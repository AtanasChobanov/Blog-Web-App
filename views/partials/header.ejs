    <style>
        html, body {
            height: 100%;
            margin: 0;
            display: flex;
            flex-direction: column;
        }

        main {
            flex-grow: 1;
        }

        footer {
            flex-shrink: 0;
        }

        .header {
            background-color: #f8f9fa;
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
        }

        .header h1 {
            font-size: 2rem;
            margin-bottom: 0;
        }

        .nav-link {
            margin-right: 15px; 
        }

        .nav-link:hover {
            color: #007bff;
        }
        
        button {
            padding: 0.8em 1.8em;
            border: 2px solid #17C3B2;
            position: relative;
            overflow: hidden;
            background-color: transparent;
            text-align: center;
            text-transform: uppercase;
            font-size: 16px;
            transition: .3s;
            z-index: 1;
            font-family: inherit;
            color: #17C3B2;
        }

        button::before {
            content: '';
            width: 0;
            height: 300%;
            position: absolute;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%) rotate(45deg);
            background: #17C3B2;
            transition: .5s ease;
            display: block;
            z-index: -1;
        }

        button:hover::before {
            width: 105%;
        }

        button:hover {
            color: #111;
        }

        /* Стил за съобщението за грешка */
        .error-message {
            background-color: #f8d7da;
            color: #721c24;
            border: 1px solid #f5c6cb;
            padding: 15px;
            border-radius: 5px;
            margin-bottom: 20px;
        }

        .error-message strong {
            font-weight: bold;
        }

        /* Анимация */
        .banter-loader {
            position: fixed;
            bottom: 20px;
            right: 20px;
            width: 72px;
            height: 72px;
        }

        .banter-loader__box {
            float: left;
            position: relative;
            width: 20px;
            height: 20px;
            margin-right: 6px;
        }

        .banter-loader__box:before {
            content: "";
            position: absolute;
            left: 0;
            top: 0;
            width: 100%;
            height: 100%;
            background: #1e90ff;
            border-radius: 7px;
        }

        .banter-loader__box:nth-child(1) {
            animation: banter 0.6s 0s infinite;
        }

        .banter-loader__box:nth-child(2) {
            animation: banter 0.6s 0.1s infinite;
        }

        .banter-loader__box:nth-child(3) {
            animation: banter 0.6s 0.2s infinite;
        }

        .banter-loader__box:nth-child(4) {
            animation: banter 0.6s 0.3s infinite;
        }

        .banter-loader__box:nth-child(5) {
            animation: banter 0.6s 0.4s infinite;
        }

        .banter-loader__box:nth-child(6) {
            animation: banter 0.6s 0.5s infinite;
        }

        .banter-loader__box:nth-child(7) {
            animation: banter 0.6s 0.6s infinite;
        }

        .banter-loader__box:nth-child(8) {
            animation: banter 0.6s 0.7s infinite;
        }

        .banter-loader__box:nth-child(9) {
            animation: banter 0.6s 0.8s infinite;
        }

        @keyframes banter {
            0% {
                transform: scale(1);
            }
            100% {
                transform: scale(0.5);
            }
        }
        
    </style>
    <title>Blog Daily</title>
</head>
